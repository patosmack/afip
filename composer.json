{
    "name": "siu/api-afip",
    "description": "Librería para la gestión de Web Services de AFIP",
    "homepage": "http://www.siu.edu.ar",
    "license": "SIU",
    "authors": [
        {
            "name": "Sistema de Información Universitaria - SIU",
            "email": "info@siu.edu.ar"
        }
    ],
    "repositories": [         
        {             
            "type": "composer",             
            "url": "https://satis.siu.edu.ar"         
        }     
    ],
    "config": {
        "bin-dir": "bin"
    },

    "require": {
        "php": ">=5.6.0",
        "psr/log": "~1.0",
        "ext-soap": "*"
    },

    "require-dev": {
        "monolog/monolog": "~1.13",
        "phpunit/phpunit": "6.0.*",
        "friendsofphp/php-cs-fixer": "~2.0"
    },
    
    "autoload": {
        "psr-4": {
            "SIU\\Afip\\": "src/SIU/Afip"
        }
    },     
    "minimum-stability": "dev",
    "prefer-stable": true
}
